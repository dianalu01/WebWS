<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.Admazing">
    <class name="com.admazing.core.models.UsuarioModel" table="usuario" >
        <id name="idUsuario" type="string">
            <column name="idUsuario" length="8" not-null="true"/>
        </id>
        <property name="nombre" type="string" column="nombre" length="30"/>
        <property name="apellidoPaterno" type="string" column="apellidoPaterno" length="30" />
        <property name="apellidoMaterno" type="string" column="apellidoMaterno" length="30" />
        <property name="edad" type="java.math.BigInteger" column="edad" />
        <property name="genero" type="string" column="genero" length="1"/>
        <property name="password" type="string" column="password" length="15"/>
	</class>
</hibernate-mapping>
